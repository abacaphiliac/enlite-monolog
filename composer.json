{
    "name": "enlitepro/enlite-monolog",
    "description": "Monolog integration to Zend Framework v2 and v3",
    "minimum-stability": "stable",
    "license": "MIT",
    "authors": [
        {
            "name": "Evgeny Shpilevsky",
            "email": "evgeny@shpilevsky.com"
        }
    ],
    "keywords": [
        "Zend Framework 2",
        "Monolog"
    ],
    "extra": {
        "branch-alias": {
            "dev-master": "2.4.x-dev"
        }
    },
    "require": {
        "monolog/monolog": "^1.0.2",
        "zendframework/zend-modulemanager": "^2",
        "zendframework/zend-stdlib": "^2 || ^3",
        "zendframework/zend-servicemanager": "^2 || ^3"
    },
    "require-dev": {
        "jakub-onderka/php-parallel-lint": "^0.9",
        "johnkary/phpunit-speedtrap": "^1.0",
        "squizlabs/php_codesniffer": "^2.9",
        "phpunit/phpunit": "^5|^4.8"
    },
    "autoload": {
        "psr-4": {
            "EnliteMonolog\\": "src/EnliteMonolog"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EnliteMonologTest\\": "test/EnliteMonologTest"
        }
    },
    "scripts": {
        "lint:beautify": "vendor/bin/phpcbf --standard=PSR2 --extensions=php --severity=1 config/ src/ test/EnliteMonologTest -v",
        "lint:style": "vendor/bin/phpcs --standard=PSR2 --extensions=php --severity=1 config/ src/ test/EnliteMonologTest -v",
        "lint:syntax": "vendor/bin/parallel-lint config/ src/ test/",
        "lint:syntax-php53": "vendor/bin/parallel-lint --exclude src/EnliteMonolog/Service/MonologServiceAwareTrait.php config/ src/ test/",
        "test:coverage": "vendor/bin/phpunit --coverage-text",
        "test:integration-zf2": "( cd test/ZF2IntegrationTest ; composer install ; composer configure ; composer test )",
        "test:units": "vendor/bin/phpunit"
    }
}
