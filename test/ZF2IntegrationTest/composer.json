{
  "name": "enlitepro/enlite-monolog-zf2-integration-test",
  "description": "EnlitePro Monolog ZF2 Integration",
  "minimum-stability": "stable",
  "license": "MIT",
  "repositories": [
    {
      "type": "path",
      "url": "../.."
    }
  ],
  "require": {
    "php": ">=5.4",
    "roave/security-advisories": "dev-master",
    "enlitepro/enlite-monolog": "*",
    "zendframework/zendframework": "^2.0"
  },
  "require-dev": {
    "phpunit/phpunit": "^5.0",
    "symfony/process": "^3.2",
    "guzzlehttp/guzzle": "^6.2"
  },
  "autoload": {
    "psr-4": {
      "Application\\": "module/Application/src"
    }
  },
  "scripts": {
    "configure": "cp ../../config/monolog.global.php.dist config/autoload/monolog.global.php",
    "test": "vendor/bin/phpunit"
  }
}
